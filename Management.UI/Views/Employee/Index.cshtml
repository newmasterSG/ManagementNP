@model List<Employee>

<h2>Список співробітників</h2>

<table class="table">
    <tr>
        <th>Ім'я</th>
        <th>Прізвище</th>
        <th>По батькові</th>
        <th>Дата народження</th>
        <th>Відділ</th>
        <th>Посада</th>
        <th>Заробітна плата</th>
        <th>Дії</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Patronimyc</td>
            <td>@employee.Birthday.ToShortDateString()</td>
            <td>@employee.Department</td>
            <td>@employee.Position</td>
            <td>@employee.Salary</td>
            <td>
                @Html.ActionLink("Редагувати", "Edit", new { id = employee.Id }) |
                @Html.ActionLink("Видалити", "Delete", new { id = employee.Id })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Додати нового співробітника", "Create")
@using (Html.BeginForm("Search", "Employee", FormMethod.Get))
{
    <div class="form-group">
        @Html.TextBox("searchTerm", null, new { @class = "form-control", placeholder = "Пошук за ім'ям, прізвищем, відділом або посадою" })
    </div>
    <button type="submit" class="btn btn-primary">Пошук</button>
}
